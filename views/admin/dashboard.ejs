<%- include('../admin/layout/newHeader.ejs') -%>


    <!-- Main Content Area -->

        <!-- Dashboard Content -->
        <div id="content-dashboard">
            <div
                class="bg-white p-4 rounded shadow-sm mb-4">
                <div
                    class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-1">Welcome Back,
                            Dr. Smith!</h1>
                        <p class="text-muted mb-0">Here's
                            what's happening at your
                            practice today.</p>
                    </div>
                    <div>
                        <button
                            class="btn btn-primary me-2">New
                            Appointment</button>
                        <button
                            class="btn btn-light">Generate
                            Report</button>
                    </div>
                </div>
            </div>

            <div class="row g-4 mb-4">
                <div class="col-md-6 col-lg-3">
                    <div
                        class="bg-white p-3 rounded shadow-sm">
                        <h6 class="text-muted mb-1">Today's
                            Appointments</h6>
                        <h3 class="mb-0"><%= todayBookings %></h3>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div
                        class="bg-white p-3 rounded shadow-sm">
                        <h6 class="text-muted mb-1">Total
                            Patients</h6>
                        <h3 class="mb-0"><%= totalUsers %></h3>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div
                        class="bg-white p-3 rounded shadow-sm">
                        <h6 class="text-muted mb-1">Total
                            Services</h6>
                        <h3 class="mb-0"><%= totalServices %></h3>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div
                        class="bg-white p-3 rounded shadow-sm">
                        <h6 class="text-muted mb-1">Total
                            Bookings</h6>
                        <h3 class="mb-0"><%= totalBookings %></h3>
                    </div>
                </div>
            </div>
            <div class="row g-4 mb-4">
                <div class="col-md-12">
                    <div class="bg-white p-3 rounded shadow-sm">
                        <h6 class="text-muted mb-1">Today's
                            Appointments</h6>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Program</th>
                                    <th>Message</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% todayAppointments.forEach(appointment => { %>
                                    <tr>
                                        <td><%= appointment.userName %></td>
                                        <td><%= appointment.email %></td>
                                        <td><%= appointment.phone %></td>
                                        <td><%= appointment.date %></td>
                                        <td><%= appointment.time %></td>
                                        <td><%= appointment.department %></td>
                                        <td><%= appointment.message %></td>
                                        <td><%= appointment.status %></td>
                                        <td>
                                            <a href="/admin/edit-appointment/<%= appointment._id %>" class="btn btn-primary">Edit</a>
                                            <a href="/admin/delete-appointment/<%= appointment._id %>" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        
        <%- include('../admin/layout/newFooter.ejs') -%>