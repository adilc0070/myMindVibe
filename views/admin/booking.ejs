<%- include('../admin/layout/newHeader.ejs') -%>
<div id="content-bookings">
            <div
                class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4 mb-0">Appointment Management
                </h2>
                <button class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#addBookingModal">
                    <i class="bi bi-plus-lg"></i> New
                    Appointment
                </button>
            </div>

            <div class="row mb-4">
                <div class="col-md-4">
                    <div
                        class="bg-white p-3 rounded shadow-sm">
                        <h6>Today's Schedule</h6>
                        <div
                            class="list-group list-group-flush">
                            <div
                                class="list-group-item border-0">
                                <div
                                    class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">
                                            9:00 AM</h6>
                                        <small
                                            class="text-muted">John
                                            Doe - Initial
                                            Consultation</small>
                                    </div>
                                    <span
                                        class="badge bg-primary">Confirmed</span>
                                </div>
                            </div>
                            <div
                                class="list-group-item border-0">
                                <div
                                    class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">
                                            11:30 AM</h6>
                                        <small
                                            class="text-muted">Jane
                                            Smith -
                                            Follow-up</small>
                                    </div>
                                    <span
                                        class="badge bg-warning text-dark">Pending</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div
                        class="bg-white p-3 rounded shadow-sm">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Patient</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Jan 15, 2025
                                        </td>
                                        <td>9:00 AM</td>
                                        <td>John Doe</td>
                                        <td>Initial
                                            Consultation
                                        </td>
                                        <td><span
                                                class="badge bg-success">Confirmed</span>
                                        </td>
                                        <td>
                                            <button
                                                class="btn btn-sm btn-outline-primary">Edit</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../admin/layout/newFooter.ejs') -%>