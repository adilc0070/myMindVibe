<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
   
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center mb-4">Sales Report</h2>

        <%if(orderdata.length>0){%>
        <!-- Sales Table -->
        <table class="table">
            <thead>
                <tr>
                    <td colspan="4" class="text-end">Total Sales:</td>
                    <td>₹<%= totalSales %></td>
                </tr>
                <tr>
                    <th>Ordered Date</th>
                    <th>Product</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Payment Method</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% orderdata.forEach((order) => { %>
                    <% order.products.forEach((product) => { %>
                      <tr>
                        <td><%= order.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }).replace(/\//g, '-') %></td>
                        <td><%= product.productId.product_name.slice(0, 20) %></td>
                        <td>₹<%= product.productId.price %></td>
                        <td><%= product.quantity %></td>
                        <td>₹<%= product.quantity * product.productId.price %></td>
                        <td><%= order.paymentType %></td>
                        <td><%= order.status %></td>
                      </tr>
                    <% }) %>
                  <% }) %>
                </tbody>
                
            </table>
            <%}else{%>
            <p>No orders found.</p>
            <%}%>              
        </div>
        
    

    <!-- Bootstrap JS (optional, if needed) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function printSalesReport() {
            window.print();
        }
        printSalesReport();
    </script>

</body>
</html>
